<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="large_tittle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="small_parameters_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:layout_marginEnd">@dimen/extra_large_margin</item>
    </style>

    <style name="search_edit_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:elevation">@dimen/normal_elevation</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:paddingStart">@dimen/extra_large_margin</item>
        <item name="android:paddingEnd">@dimen/extra_large_margin</item>
        <item name="android:drawablePadding">@dimen/large_margin</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/color_transparent</item>
    </style>
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>